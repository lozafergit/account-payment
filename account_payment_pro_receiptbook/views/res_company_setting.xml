<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.receiptbook</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account_payment_pro.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='use_payment_pro']" position="after">
                <setting id="use_receiptbook" string="Use Receiptbook" company_dependent="1"
                    help="Enable this option to use receipt books for managing payments." invisible="not use_payment_pro">
                    <field name="use_receiptbook"/>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
