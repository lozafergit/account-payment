<odoo>

    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account_payment_group.view_account_payment_form"/>
        <field name="arch" type="xml">
            <div name="amount_div" position="after">
                <field name="counterpart_currency_id" invisible="1"/>
                <label for="counterpart_currency_amount" string="Counterpart Currency" attrs="{'invisible': [('other_currency', '=', True)]}" groups="base.group_multi_currency"/>
                <div name="counterpart_currency_amount" class="o_row" attrs="{'invisible': [('other_currency', '=', True)]}" groups="base.group_multi_currency">
                    <field name="counterpart_currency_id" domain="[('id', '!=', currency_id)]" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    <field name="counterpart_currency_amount" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('counterpart_currency_id', '=', False)], 'required': [('counterpart_currency_id', '!=', False), ('other_currency', '=', False)]}"/>
                </div>
            </div>
        </field>
    </record>

</odoo>
