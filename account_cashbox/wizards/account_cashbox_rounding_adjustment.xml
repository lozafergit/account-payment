<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_cashbox_rounding_adjustment_wizard" model="ir.ui.view">
        <field name="name">account.cashbox.rounding.adjustment.wizard.form</field>
        <field name="model">account.cashbox.rounding.adjustment.wizard</field>
        <field name="arch" type="xml">
            <form string="Rounding Adjustment">
                    <p>
                        <b>Rounding Difference Detected</b><br/>
                        There is a discrepancy between the expected and actual cash balances in your journals.<br/>
                        To resolve this, you can automatically generate journal entries for the rounding difference by clicking <b>Create Journal Entries</b>.<br/>
                        If you prefer not to create these entries, click <b>Don't create entries and close</b> to exit without changes.
                    </p>
                <footer>
                    <button name="action_create_journal_entries"
                            string="Create Journal Entries"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_close_without_entries"
                            string="Don't create entries and close"
                            type="object"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
